<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:layout_marginTop="66dp"
        android:layout_marginStart="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/menu"/>

    <ImageView
        android:id="@+id/iv_account_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_account"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/account"/>

    <TextView
        android:id="@+id/tv_parent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:layout_marginHorizontal="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="@string/rent_a_car"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="42sp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_et"
        android:layout_marginTop="198dp"
        android:layout_marginHorizontal="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/search"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:drawableStart="@drawable/ic_search"
        android:paddingHorizontal="12dp"
        android:drawablePadding="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_blue_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="282dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/blue">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingHorizontal="14dp"
            android:src="@drawable/ic_arrow"
            android:contentDescription="@string/arrow" />

        <TextView
            android:id="@+id/tv_bogamy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingTop="58dp"
            android:paddingHorizontal="14dp"
            android:text="@string/bogamy"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pink_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="448dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/pink">

        <ImageView
            android:id="@+id/iv_arrow_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingHorizontal="14dp"
            android:src="@drawable/ic_arrow"
            android:contentDescription="@string/arrow" />

        <TextView
            android:id="@+id/tv_bogamy_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingTop="58dp"
            android:paddingHorizontal="14dp"
            android:text="@string/bogamy"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_light_blue_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="614dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/light_blue">

        <ImageView
            android:id="@+id/iv_arrow_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingHorizontal="14dp"
            android:src="@drawable/ic_arrow"
            android:contentDescription="@string/arrow" />

        <TextView
            android:id="@+id/tv_bogamy_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingTop="58dp"
            android:paddingHorizontal="14dp"
            android:text="@string/bogamy"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/bicycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cv_blue_card"
        android:layout_alignBottom="@+id/cv_blue_card"
        android:elevation="2dp"
        android:src="@drawable/img"
        android:contentDescription="@string/bicycle" />

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cv_pink_card"
        android:layout_alignBottom="@+id/cv_pink_card"
        android:elevation="2dp"
        android:src="@drawable/img_1"
        android:contentDescription="@string/car" />

    <ImageView
        android:id="@+id/iv_bus"
        android:layout_width="144dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cv_light_blue_card"
        android:layout_alignBottom="@+id/cv_light_blue_card"
        android:elevation="2dp"
        android:src="@drawable/img_2"
        android:contentDescription="@string/bus" />

</RelativeLayout>